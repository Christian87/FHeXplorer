<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/h_Grau" android:orientation="vertical">
    <RelativeLayout 
    	android:id="@+id/relativeLayout1" 
    	android:layout_width="match_parent" 
    	android:layout_height="50dip" 
    	android:background="@color/d_Grau" 
    	android:layout_marginBottom="10dip" android:gravity="fill_vertical">
        <ImageView 
        	android:id="@+id/imageView1" 
        	android:layout_height="wrap_content" 
        	android:src="@drawable/icon" 
        	android:layout_width="wrap_content" 
        	android:layout_alignParentLeft="true"
        	/>
        <ImageButton 
        	android:id="@+id/imageButton1" 
        	android:src="@drawable/quit_default" 
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"/>
        <ImageButton 
        	android:id="@+id/imageButton2" 
        	android:src="@drawable/user_default" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:layout_toLeftOf="@+id/imageButton1" 
        	android:layout_alignTop="@+id/imageButton1" 
        	android:layout_alignBottom="@+id/imageButton1"
        	android:visibility="invisible"
        	android:clickable="true"
        	android:onClick="oeffne_Einstellungen"></ImageButton>
    </RelativeLayout>
    <Button
    	android:id="@+id/sf_map"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Starten"
    	android:drawableLeft="@drawable/nav"
    	android:onClick="oeffne_map"
    	/>
     <Button
     	android:id="@+id/sf_anmelden"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Anmelden"
    	android:drawableLeft="@drawable/icon"
    	android:onClick="oeffne_anmelden"
    	/>
     <Button
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Registrieren"
    	android:drawableLeft="@drawable/icon"
    	/>
     <Button
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Passwort vergessen?"
    	android:drawableLeft="@drawable/icon"
    	/>
    <RelativeLayout android:id="@+id/relativeLayout2" android:layout_width="match_parent" android:layout_gravity="bottom" android:layout_height="match_parent" android:gravity="bottom">
        <RelativeLayout android:background="@color/d_Grau" android:layout_height="50dip" android:id="@+id/relativeLayout3" android:layout_alignParentLeft="true" android:layout_width="match_parent"></RelativeLayout>
    </RelativeLayout>
     

</LinearLayout>
