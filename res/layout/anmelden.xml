<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/h_Grau"
    >
    <RelativeLayout 
    	android:id="@+id/relativeLayout1" 
    	android:layout_width="match_parent" 
    	android:layout_height="50dip" 
    	android:background="@color/d_Grau" 
    	android:layout_marginBottom="10dip" android:gravity="center_horizontal">
        <ImageView 
        	android:id="@+id/imageView2" 
        	android:layout_height="wrap_content" 
        	android:src="@drawable/icon" 
        	android:layout_width="wrap_content" 
        	android:layout_alignParentLeft="true"
        	/>
        <ImageButton 
        	android:layout_height="wrap_content" 
        	android:id="@+id/imageButton3" 
        	android:src="@drawable/quit_default" 
        	android:layout_width="wrap_content" 
        	android:layout_alignParentRight="true"
        	/>
    </RelativeLayout>
    <TextView 
    	android:text="ANMELDUNG" 
    	android:id="@+id/textView1" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:textSize="25dip"
    	android:textColor="@color/Schwarz"
    	android:layout_marginLeft="10dip"
    	android:layout_marginBottom="30dip"></TextView>
    <TableLayout 
    	android:layout_width="310dip" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/tableLayout1" >
        <TableRow android:id="@+id/tableRow1" android:layout_width="match_parent" android:layout_height="wrap_content">
        	    <TextView 
    				android:text="Name: " 
    				android:id="@+id/textView1" 
    				android:layout_width="110dip" 
    				android:layout_height="wrap_content"
    				android:textSize="25dip"
    				android:textColor="@color/Schwarz"
    				android:layout_marginLeft="10dip" android:layout_gravity="center_vertical"></TextView>
        	    <EditText 
        	    android:layout_width="200dip" 
        	    android:id="@+id/editText1" 
        	    android:layout_height="wrap_content"></EditText>
   
        		</TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="match_parent" android:layout_height="wrap_content">
        	    <TextView 
    				android:text="Passwort: " 
    				android:id="@+id/textView2" 
    				android:layout_width="110dip" 
    				android:layout_height="wrap_content"
    				android:textSize="25dip"
    				android:textColor="@color/Schwarz"
    				android:layout_marginLeft="10dip"
    				android:layout_gravity="center_vertical"></TextView>
        	    <EditText 
        	    android:layout_width="200dip" 
        	    android:id="@+id/editText2" 
        	    android:layout_height="wrap_content"
        	    android:password="true"></EditText>
   
        		</TableRow>
		
    </TableLayout>
    <Button android:text="Anmelden" 
            android:layout_width="220dip" 
            android:id="@+id/button1" 
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:onClick="anmelden"></Button>
    <RelativeLayout android:id="@+id/relativeLayout2" android:layout_width="match_parent" android:layout_gravity="bottom" android:layout_height="match_parent" android:gravity="bottom">
        <RelativeLayout android:background="@color/d_Grau" android:layout_height="50dip" android:id="@+id/relativeLayout3" android:layout_alignParentLeft="true" android:layout_width="match_parent"></RelativeLayout>
    </RelativeLayout>
     

</LinearLayout>
