<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/h_Grau"
    >
    <RelativeLayout 
    	android:id="@+id/relativeLayout1" 
    	android:layout_width="match_parent" 
    	android:layout_height="50dip" 
    	android:background="@color/d_Grau" 
    	android:layout_marginBottom="10dip" android:gravity="center_horizontal">
        <ImageView 
        	android:id="@+id/imageView2" 
        	android:layout_height="wrap_content" 
        	android:src="@drawable/icon" 
        	android:layout_width="wrap_content" 
        	android:layout_alignParentLeft="true"
        	/>
        <ImageButton 
        	android:layout_height="wrap_content" 
        	android:id="@+id/imageButton3" 
        	android:src="@drawable/quit_default" 
        	android:layout_width="wrap_content" 
        	android:layout_alignParentRight="true"
        	/>
    </RelativeLayout>
    
    <Button
    	android:id="@+id/sf_stundenplan_anzeigen"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Stundenplan anzeigen"
    	android:drawableLeft="@drawable/icon"
    	/>
    
    <Button
    	android:id="@+id/sf_stundenplan_anpassen"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Stundenplan anpassen"
    	android:drawableLeft="@drawable/icon"
    	/>
    	
    <Button
    	android:id="@+id/sf_favoriten"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Favoriten einstellen"
    	android:drawableLeft="@drawable/icon"
    	/>
    <Button
    	android:id="@+id/sf_editpw"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Passwort ändern"
    	android:drawableLeft="@drawable/icon"
    	/>
    <Button
    	android:id="@+id/sf_editpw"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Zurück zur Karte"
    	android:drawableLeft="@drawable/nav"
    	/>
</LinearLayout>
